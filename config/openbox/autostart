# APPS

nitrogen --restore
# for use with K2SO Quotes desktop wallpaper series
#nitrogen --set-auto --random &
volti &
compton &
tint2 &
tint2 -c /home/scosh/.config/tint2/clock/clock.tint2rc &
lxpolkit &
dropbox &
numlockx &
docky &

# KEYBOARD

# set caps-lock as the compose key to type umlauts and such
setxkbmap -option compose:caps

# change the $ key on my US Layout to a Euro-Moneydollars key
xmodmap -e "keycode  13 = 4 EuroSign 4 EuroSign"

# APPLE KEYBOARD STUFF

# us keyboard layout
setxkbmap -device 12 us

# compose key
setxkbmap -device 12 -option compose:caps

# SYSTEM / SCREEN

# turn off system error beep
xset -b 

# turn off screen going dark after 10 mins
xset -dpms s off
